{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ES2020",
        "jsx": "preserve",
        "incremental": true,
        "noUncheckedIndexedAccess": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "dist",
        ".next",
        ".turbo"
    ]
}